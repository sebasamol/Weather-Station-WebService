extends layout

block content
  head
    h2= title
    
    script(src='https://kit.fontawesome.com/abd674511e.js')
    script( src='https://cdn.jsdelivr.net/npm/chart.js@4.3.0')

    //Graphs
    script(type='module' src='/public/javascripts/graphs-pn-out.js')
