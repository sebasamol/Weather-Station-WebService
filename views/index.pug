      div(class='city')
        h2 Poznań
        div(class='outside')
          canvas(id='temp-pn-out')
          canvas(id='hum-pn-out')
          canvas(id='press-pn-out')
          
          
        div(class='inside')
          canvas(id='temp-pn-in')
          canvas(id='hum-pn-in')
          
        div(class='city')
          h2 Międzyrzecz
          div(class='outside')
          
          
          
        
          
      
        
        
        

         

  
        











